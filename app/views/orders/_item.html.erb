<% @order.line_items.each do |item| %>
  <tr class="item">
    <td><%= image_tag(item.product.image.thumb.url, alt: item.product.name) %></td>
    <td><h4><%= item.product.name %></h4><br>
    <p><%= item.product.description %></p></td>
    <td><%= humanized_money_with_symbol(item.item_price) %></td>
    <td><%= item.quantity %></td>
    <td><%= humanized_money_with_symbol(item.total_price) %></td>
  </tr>
<% end %>